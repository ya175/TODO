@model ListItem
<h1>Edit Item</h1>


<form action="/ListItem/Edit" method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input class="form-control" type="text"  name="Title" value="@Model.Title">

        <div class="form-group">
            <label for="Descreption">Descreption</label>
            <input class="form-control" type="text" name="Descreption" value="@Model.Descreption">
        </div>

        <div class="form-group">
            <label for="Deadline">Deadline</label>
            <input class="form-control" id="myDateTimeInput" type="datetime-local" placeholder="Default input" name="Deadline" value="@(Model.Deadline.ToString("yyyy-MM-ddTHH:mm:ss"))">
        </div>
        <input name="Id" value="@Model.Id"  hidden>
        
        <button type="submit" class="btn btn-primary">Edit</button>

</form>