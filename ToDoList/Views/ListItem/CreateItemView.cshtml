<form action="/ListItem/CreateItem" method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input class="form-control" type="text" placeholder="Default input" name="Title">

        <div class="form-group">
            <label for="Descreption">Descreption</label>
            <input class="form-control" type="text" placeholder="Default input" name="Descreption">
        </div>

        <div class="form-group">
            <label for="Deadline">Deadline</label>
            <input class="form-control" type="datetime-local" placeholder="Default input" name="Deadline">
        </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>